<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.berlios.hgkit</groupId>
    <artifactId>hgkit</artifactId>
    <packaging>jar</packaging>
    <version>SNAPSHOT</version>
    <name>hgkit</name>
    <url>http://hgkit.berlios.de/</url>
    <inceptionYear>2007</inceptionYear>
    <organization>
        <name>hgkit</name>
        <url>http://hgkit.berlios.de/</url>
    </organization>
    <description>HgKit aims to be a java library for managing
        mercurial (hg) repositories.</description>
    <ciManagement>
        <system>hudson</system>
        <url>http://zeibig.net:20080/job/HgKit/</url>
    </ciManagement>
    <issueManagement>
        <system>berlios</system>
        <url>https://developer.berlios.de/bugs/?group_id=10058</url>
    </issueManagement>
    <scm>
        <connection>scm:hg:http://hg.berlios.de/repos/hgkit</connection>
        <developerConnection>scm:hg:https://hg.berlios.de/repos/hgkit</developerConnection>
        <url>http://hg.berlios.de/repos/hgkit</url>
    </scm>
    <properties>
        <!--
            compare:
            http://docs.codehaus.org/display/MAVENUSER/POM+Element+for+Source+File+Encoding
        -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <developers>
        <developer>
            <id>mfriedenhagen</id>
            <email>mfriedenhagen@users.berlios.de</email>
            <name>Mirko Friedenhagen</name>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
        <developer>
            <id>stefanc</id>
            <name>Stefan C.</name>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
    <licenses>
        <license>
            <comments>For further information see license.txt</comments>
            <name>GPL-2.0</name>
            <url>http://www.gnu.org/licenses/gpl-2.0.txt</url>
        </license>
    </licenses>
    <distributionManagement>
        <site>
            <id>shell.berlios.de</id>
            <name>HgKit Website on berlios</name>
            <url>scp://shell.berlios.de:/home/groups/hgkit/htdocs/</url>
        </site>
        <snapshotRepository>
            <id>shell.berlios.de</id>
            <name>Maven2-Repo on berlios</name>
            <url>scp://shell.berlios.de:/home/groups/hgkit/htdocs/maven2snapshotrepo/</url>
        </snapshotRepository>
        <repository>
            <id>shell.berlios.de</id>
            <name>Maven2-Repo on berlios</name>
            <url>scp://shell.berlios.de:/home/groups/hgkit/htdocs/maven2repo/</url>
        </repository>
    </distributionManagement>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>hgkit-attach-sources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <show>private</show>
                    <quiet>true</quiet>
                    <links>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
                    </links>
                    <bottom>
                        <![CDATA[<a href="http://hgkit.berlios.de/">Copyright Â© {inceptionYear}-{currentYear} {organizationName}</a>]]>
                    </bottom>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>taglist-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-changes-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <configLocation>${basedir}/src/conf/checkstyle-ruleset.xml</configLocation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-pmd-plugin</artifactId>
                <configuration>
                    <linkXref>true</linkXref>
                    <includeTests>true</includeTests>
                    <sourceEncoding>utf-8</sourceEncoding>
                    <minimumTokens>100</minimumTokens>
                    <targetJdk>1.5</targetJdk>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <xmlOutput>true</xmlOutput>
                    <!--
                        <xmlOutputDirectory>directory location of xml
                        findbugs report</xmlOutputDirectory>
                    -->
                    <threshold>Low</threshold>
                    <effort>Max</effort>
                    <debug>false</debug>
                    <relaxed>false</relaxed>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <formats>
                        <format>xml</format>
                        <format>html</format>
                    </formats>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jdepend-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>
</project>
